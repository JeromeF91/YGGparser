# YGG Torrent Parser Environment Variables
# Copy this file to .env and fill in your values

# YGG Torrent cookies (required)
# Get these from your browser after logging in to YGG Torrent
YGG_COOKIES=cf_clearance=your_cf_clearance_value; account_created=true; yggxf_user=your_user_value; a3_promo_details=your_promo_details; ygg_=your_ygg_value

# YGG Torrent passkey (required)
YGG_PASSKEY=your_passkey_here

# Optional: Specific subcategories to process (comma-separated IDs)
# Leave empty to process all categories
YGG_CATEGORIES=2163,2145,2146,2142

# Optional: Processing interval in hours (default: 6)
YGG_INTERVAL=6

# Optional: Maximum number of torrents per category (default: 100)
YGG_MAX_TORRENTS=100

# Optional: Enable debug logging (true/false)
YGG_DEBUG=false

# Download Settings
# Enable automatic torrent file downloads (true/false)
YGG_DOWNLOAD_ENABLED=false

# Download criteria
YGG_MIN_SEEDS=5
YGG_MAX_SIZE_MB=5000
YGG_KEYWORDS=game,hd,1080p
